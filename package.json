{
  "name": "base-ts-config",
  "type": "module",
  "version": "1.0.0",
  "repository": "github:LangLangBart/base-ts-config",
  "keywords": [
    "eslint",
    "typescript"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "lint:fix": "eslint --cache --fix --max-warnings 0",
    "type:check": "tsc --skipLibCheck",
    "postinstall": "if type pre-commit >/dev/null; then pre-commit install --hook-type commit-msg --hook-type pre-commit; fi"
  },
  "dependencies": {
    "@antfu/eslint-config": "^6.6.1",
    "@prettier/plugin-xml": "^3.4.2",
    "eslint-plugin-format": "^1.1.0",
    "eslint-plugin-sonarjs": "^3.0.5"
  }
}
